<p style="color: green"><%= notice %></p>

<h1>Friend List</h1>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Twitter</th>
        </tr>
    </thead>

    <tbody>
        <div id="friends">
          <% @friends.each do |friend| %>
            <tr>
                <td><%= friend.first_name %></td>
                <td><%= friend.last_name %></td>
                <td><%= friend.email %></td>
                <td><%= friend.phone %></td>
                <td><%= friend.twitter %></td>
                <td><%= link_to "Show this friend", friend %></td>
            </tr>
          <% end %>
        </div>
    </tbody>
</table>

<%= link_to "New friend", new_friend_path %>
